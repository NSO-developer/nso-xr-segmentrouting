<ncs-package xmlns="http://tail-f.com/ns/ncs-packages">
  <name>sr</name>
  <package-version>1.0</package-version>
  <description>Java- and template-based sr resource facing service</description>
  <ncs-min-version>4.6</ncs-min-version>

  <required-package>
    <name>resource-manager</name>
  </required-package>

  <!-- It's possible to add more components to the -->
  <!-- same package, multiple services, data providers etc -->

  <component>
    <name>main</name>
    <application>
      <python-class-name>sr.main.Main</python-class-name>
    </application>
  </component>
</ncs-package>
